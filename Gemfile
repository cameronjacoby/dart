gem "coffee-rails", "~> 4.1.0"
gem "jquery-rails"
gem "uglifier", ">= 1.3.0"

# apis
gem "jbuilder", "~> 2.0"
gem "nokogiri"
gem "sdoc", "~> 0.4.0", group: :doc

group :development, :test do
  gem "byebug"
  gem "dotenv-rails"
  gem "faker"
  gem "factory_girl_rails"
  gem "rspec-rails"
  gem "simplecov"
  gem "spring"
  gem "web-console", "~> 2.0"
