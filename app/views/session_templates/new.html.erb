<div class="row">
  <div class="col-sm-3"></div>

  <div class="col-sm-6">
    <h2>Log In</h2>

    <form ng-submit="session.createSession(user)">
      <div class="form-group">
        <input type="email" ng-model="user.email" class="form-control" placeholder="Email" required autofocus>
      </div>
      <div class="form-group">
        <input type="password" ng-model="user.password" class="form-control" placeholder="Password" required>
      </div>
      <div class="form-group">
        <button class="btn btn-primary">Log In</button>
      </div>
    </form>

  <div class="col-sm-3"></div>
</div>